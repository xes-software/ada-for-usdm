generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model Transaction {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  txHash    String   @unique @map("tx_hash")

  @@index([txHash])
  @@map("transactions")
}
